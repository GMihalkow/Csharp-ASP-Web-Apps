<body>
    <section class="banner">
        <section>
            <div class="banner-icon">
                <i class="fab fa-stripe-s fa-3x"></i>
            </div>
            <div class="banner-search-box">
                <input type="text" class="text-center" placeholder="Search for a product..." />
                <button class="shop-btn" type="button"><i class="fas fa-search fa-lg"></i></button>
            </div>
            <div class="banner-order-information">
                <a href="#">
                    <i class="fas fa-shopping-cart fa-2x"></i>
                </a>
            </div>
        </section>
    </section>

    <nav class="shop-nav">
        <ul>
            <li>@Html.ActionLink("Index", "Index", "Home")</li>
            <li>@Html.ActionLink("Products", "All", "Product")</li>
            <li>@Html.ActionLink("Blog", "Blog", "Home")</li>
            <li>@Html.ActionLink("Shop", "Shop", "Home")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            <li class="dropdown">
                <a href="#" class="dropbtn">My Account</a>
                <div class="dropdown-content">
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Profile", "Profle", "Account")
                        @Html.ActionLink("Logout", "Logout", "Account", null, new { shop_action = "logout" })
                    }
                    else
                    {
                        @Html.ActionLink("Login", "Login", "Account")
                        @Html.ActionLink("Register", "Register", "Account")
                    }
                </div>
            </li>
        </ul>
    </nav>

    @this.RenderBody()

