    @RenderSection("scripts", required: false)

    <script id="error-partial-template" type="text/javascript">
        @Html.Partial("_ErrorDialogTemplate")
    </script>

    <script type="text/javascript">
        $(function () {
            // Visualising the ordered elements count
            @if (this.User.Identity.IsAuthenticated)
            {
                 @: var cartElement = $(".banner .banner-order-information i");
                 @: cartElement.text(window.sessionStorage.length);
            }

            // error dialog popup
            var errorDialog = $("#error-dialog");

            errorDialog.dialog({
                autoOpen: false,
                height: 200,
                width: 400,
                modal: true,
                show: {
                    effect: "blind",
                    duration: 500
                },
                hide: {
                    effect: "explode",
                    duration: 500
                },
                buttons: {
                    OK: function () {
                        errorDialog.dialog("close");
                    }
                }
            });

            var checkoutButton = $(".banner .banner-order-information > a");
            checkoutButton.on("click", function (e) {
                // TODO [GM]: Make the Checkout as a partial

                e.preventDefault();

                $.ajax({
                    method: "POST",
                    headers: {
                    },
                    url: "@Url.Action("Checkout", "Order")",
                    data: {
                        products: JSON.stringify(Object.keys(window.sessionStorage)
                            .map(function (product) {
                            if (product !== "length") {
                                return { ProductId: product, Quantity: window.sessionStorage[product] };
                                }
                            }))
                    }
                })
                .then(function (data) {
                    
                });

            });
        });
    </script>
