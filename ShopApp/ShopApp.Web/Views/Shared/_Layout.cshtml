<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShopApp</title>
    <!-- TODO [GM]: Extract to respective bundles -->
    <script src="~/scripts/mustache.js/mustache.min.js"></script>
    <script src="~/scripts/jquery/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/bundles/jquery-ui")
</head>
<body>

    <main>
        @this.Html.Partial("_Modal")

        <div id="loader-container" class="ui-widget-overlay ui-front">
            <div id="loader" class="loader"></div>
        </div>

        <section class="banner">
            <section>
                <div class="banner-icon">
                    <i class="fab fa-stripe-s fa-3x"></i>
                </div>
                <div class="banner-search-box">
                    <input id="search-box" type="text" class="text-center" placeholder="Search for a product..." />
                    <button class="shop-btn" type="button"><i class="fas fa-search fa-lg"></i></button>
                </div>
                <div class="banner-order-information">
                    <a href="javascript:void(0)">
                        <i class="fas fa-shopping-cart fa-2x"></i>
                    </a>
                </div>
            </section>
        </section>

        <nav class="shop-nav">
            <ul>
                <li>@this.Html.ActionLink("Index", "Index", "Home")</li>
                <li>@this.Html.ActionLink("Browse", "All", "Product")</a></li>
                <li>@this.Html.ActionLink("About", "About", "Home")</li>
                <li>@this.Html.ActionLink("Contact", "Contact", "Home")</li>
                <li><a href="javascript:void(0)" modal-btn>Test Modal</a></li>
                <li class="dropdown">
                    <a href="#" class="dropbtn">My Account</a>
                    <div class="dropdown-content">
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            if (this.User.IsInRole(RolesConstants.Administrator))
                            {
                                @: @this.Html.ActionLink("Orders", "All", "Order")
                            }
                            @: @this.Html.ActionLink("Profile", "MyProfile", "Account")
                            @: @this.Html.ActionLink("Logout", "Logout", "Account", null, new { shop_action = "logout" })
                        }
                        else
                        {
                            @: @this.Html.ActionLink("Login", "Login", "Account", null, new { shop_action = "logout" })
                            @: @this.Html.ActionLink("Register", "Register", "Account")
                        }
                    </div>
                </li>
            </ul>
        </nav>

        @this.RenderBody()

        @if (this.User.Identity.IsAuthenticated)
        {
            <div id="checkout-dialog" title="Checkout"></div>
        }

    </main>

    <footer class="shop-footer">
        <section class="footer-information">
            <section>
                <h4 class="text-center">Contact Info</h4>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore.</p>
            </section>
