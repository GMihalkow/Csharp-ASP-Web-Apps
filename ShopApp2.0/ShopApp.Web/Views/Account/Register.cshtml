@model RegisterInputModel
@{
    ViewBag.RegisterValidationScripts = true;
    ViewBag.RegisterFlatpickr = true;
}

<div class="form-wrapper">
    <h2 class="w-50 mx-auto text-center">Register</h2>
    <form class="custom-form" asp-controller="Account" asp-action="Register" method="@FormMethod.Post.ToString()">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="custom-input-wrapper">
            <input asp-for="UserName" placeholder="Enter Username...">
            <span class="d-block text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="custom-input-wrapper">
            <input asp-for="FirstName" placeholder="Enter First Name...">
            <span class="d-block text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="custom-input-wrapper">
            <input asp-for="LastName" placeholder="Enter Last Name...">
            <span class="d-block text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="custom-input-wrapper">
            <input asp-for="Email" placeholder="Enter Email Address...">
            <span class="d-block text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="custom-input-wrapper">
            <input asp-for="Password" placeholder="Enter Password...">
            <span class="d-block text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="custom-input-wrapper">
            <input asp-for="ConfirmPassword" placeholder="Enter Confirm Password...">
            <span class="d-block text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="custom-input-wrapper">
            <input asp-for="PhoneNumber" placeholder="Enter Phone Number...">
            <span class="d-block text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="custom-input-wrapper">
            <input asp-for="BirthDate" placeholder="Enter Birth Date...">
            <span class="d-block text-danger" asp-validation-for="BirthDate"></span>
        </div>
        <div class="custom-input-wrapper">
            <input type="submit" value="Register"/>
        </div>
        <p class="text-center">Already have an account? You can sign in <a asp-action="Login" asp-controller="Account">here</a>.</p>
    </form>
</div>

@section scripts {
    <script type="text/javascript">
		$(function () {
            $("#BirthDate").flatpickr({});
		});
	</script>
}