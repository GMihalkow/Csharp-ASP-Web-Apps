<!DOCTYPE html>
<html lang="en">
<head>
    <title>Shop App 2.0</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/lib/fontawesome/all.min.css">
    @if (ViewBag.RegisterFlatpickr == true)
    {
        <link rel="stylesheet" href="~/lib/flatpickr/flatpickr.min.css">
        <link rel="stylesheet" href="~/lib/flatpickr/theme.css">
        <link rel="stylesheet" href="~/lib/flatpickr/ie.css">
    }
</head>
<body>

<header>
    <partial name="_BannerPartial"/>
    <partial name="_BannerSearchPartial"/>
    <partial name="_MenuPartial"/>
</header>

<main>
    <div class="main">
        @RenderBody()
    </div>
</main>

<footer>

</footer>

<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>

<script type="text/javascript" src="~/js/custom/dropdown.js"></script>

@if (ViewBag.RegisterFlatpickr == true)
{
    <script type="text/javascript" src="~/lib/flatpickr/flatpickr.min.js"></script>
}

@if (ViewBag.RegisterValidationScripts == true)
{
    <script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

@RenderSection("scripts", required: false)

</body>
</html>